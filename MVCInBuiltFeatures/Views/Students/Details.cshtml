                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayFor(model => model.sid)@Html.DisplayFor(model => model.name)@Html.DisplayFor(model => model.sname)</h3>
                    </div>
                    <div class="panel-body">
