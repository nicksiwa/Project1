                                            <td>@Html.DisplayFor(model => model.sname)</td>
                                        </tr>

                                        <tr>
                                            <td>เพศ :</td>
                                            <td>ชาย</td>
                                        </tr>


                                        <tr>
                                            <td>หมู่เลือด :</td>
