                                    </tr>

                                    <td>เบอร์โทร : </td>
                                    <td>
                                        @Html.DisplayFor(model => model.tel)
                                    </td>

                                    </tr>

                                    </tbody>
                                </table>


                            </div>
                        </div>
                    </div>


                    <div class="panel-footer">


                    </div>

                </div>
            </div>
        </div>
    </div>


    <!-- /.container -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>


</body>

</html>